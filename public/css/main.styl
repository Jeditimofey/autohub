@import 'variables'

* 
	padding: 0
	margin: 0
	-webkit-box-sizing: border-box 
	-moz-box-sizing: border-box
	box-sizing: border-box
	&:before
		box-sizing: border-box
	&:after
		box-sizing: border-box

html, body
	font: font-size/line-height font-main
	color: #999
	background: #F5F5F5
	height: 100vh

a 
	text-decoration: none
	color: #666
	&:hover
		color:#333
ul 
	list-style: none
.content
	width: 95%
	max-width: 550px
	//padding: 5px 5px
	margin: 0 auto 	
	//text-align: center

.content:before, .content:after, .row:after, .row:before, .clear:before, .clear:after, header:before, header:after	
		content: " "
		display: table

.content:after, .row:after, .clear:after,  header:after		
		clear:both

.content .cols.col-1, .content .cols.col-2,	.content .cols.col-3, .content .cols.col-4,	.content .cols.col-6, .content .cols.col-7, .content .cols.col-8, .content .cols.col-9, .content .cols.col-10, .content .cols.col-11, .content .cols.col-12
	width: 100%

.content .cols	
		float: none
.logo
	letter-spacing: 0.5px
	float: left
	display: inline-block
	color: #666
	
.mobile-nav
	float: right
	color: #666
	font-weight: 700
	padding: 5px
	a
		margin-left: 45px
		
/*==============================HEADER=========================*/
header
	position: fixed
	width: 100%
	z-index: 20
	padding: 5px
	top: 0
	background: #fff
	box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.2)

/*=====================ИКОНКИ===================*/
.down-logo,	.check, .close-logo
	float: right

.add-logo, .filter-logo, .down-logo .check, .close-logo
	display: inline-block
	border: none
	cursor: pointer
	
.add-logo
	width: 25px;
	height: 25px;
	background: url('svg/add.svg');
	background-size: 25px 25px;
.filter-logo
	width: 25px;
	height: 25px;
	background: url('svg/filter.svg');
	background-size: 25px 25px;
	

.down-logo
	display: inline-block
	margin-bottom: -3px
	margin-right: 7px
	width: 20px
	height: 20px
	background: url('svg/down.svg')
	background-size: 20px 20px
	
.checked
	color: #666
	font-weight: 700
	
.check
	margin-bottom: -3px
	margin-right: 7px
	width: 20px
	height: 20px
	background: url('svg/check.svg')
	background-size: 20px 20px

.close-logo
	display: none
	margin-bottom: -3px
	margin-right: 7px
	width: 20px
	height: 20px
	background: url('svg/close.svg')
	background-size: 20px 20px
	
	
/*======================FILTER==========================*/	
	
.filter-menu
	display: none
	background: rgba(255, 255, 255, 0.8)
	z-index: 15
	width: 100%
	position: absolute
	right: 0px
	top: 49px
.filter
	margin-left: 25%
	width: 75%
	background: #fff
	opacity: 1
.filter
	.list-header
		padding: 15px 0 15px 15px
		margin-left: 0
		color: #999
	li 
		color: #333
		padding: 10px 0
		margin-left: 15px
		border-bottom: 1px solid #F1EDED

.price-list-filter
	margin-bottom: 30px	
	
/*====================================MAIN==============================*/
main
	margin: 50px 5px 10px 5px
	position: relative
	//width: 100%

figure
	position: relative
	background: #fff
	box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.1)
	border-radius: 3px
	margin-bottom: 10px
	width: 100%
	img
		width: 100%
	.car
		position: relative
		.car-price
			position: absolute
			bottom: 10px
			left: 10px
			font-family: Roboto-Bold
			font-size: 20px
			color: #FFF
			text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.5)
figcaption
	text-decoration: left
	position: relative
	padding: 5px 10px 10px 10px
	.car-name
		color: #666
	.car-info
		span 
			margin-right: 7px
		
	
	

	

